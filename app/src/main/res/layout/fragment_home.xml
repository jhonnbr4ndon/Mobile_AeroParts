<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint=" Pesquisar Produtos"
            android:inputType="text"
            android:background="@color/cinza"/>

        <ImageButton
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/search"
            android:background="@color/white"
            android:contentDescription="Pesquisar"
            android:scaleType="fitCenter" />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="0.3"
            android:background="@color/azul_claro"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginLeft="5dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/pedido_titulo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Macacão para Voo - AeroAir (Antichamas)"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/pedido_preco"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="R$ 799,90 "/>

            </LinearLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Solicitar cotação"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="0.7"
            android:background="@android:color/white"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/pedido_imagem"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/macacao"
                android:scaleType="fitCenter"/>

        </LinearLayout>
    </LinearLayout>

